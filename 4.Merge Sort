#include <stdio.h>
void printArray(int a[], int n){
	for(int i =0; i<n; i++){
		printf("%d ", a[i]);
	}
	printf("\n");
}

void merge(int a[], int l , int m, int r, int n){
	int i = l;
	int j = m+1;
	int k = 0;
	int temp[100];

	while ( i <=m && j <=r){
		if(a[i]< a[j]){
		temp[k] = a[i];
			i++;
		}else{
			temp[k] = a[j];
			j++;
		}
		k++;
	}
	while ( i <= m){
		temp[k] = a[i];
		i++;
		k++;
	}
	while(j<= r){
		temp[k]=a[j];
		j++;
		k++;
	}

	for ( i = l, k = 0; i <= r; i++, k++){
		a[i] = temp[k];
	}
	printf("Pass: ");
	for (i = l; i<=r; i++){
		printf("%d ", a[i]);
	}
	printf("\n");
}


void mergeSort(int a[], int l, int r, int n){
	if(l<r){
		int m = (l + r)/2;
		mergeSort(a,l,m,n);
		mergeSort(a,m+1,r,n);
		merge(a, l, m, r, n);
	}
}

int main(){
	
	int a[100];
	int n;
	printf("no of elements: ");
	scanf("%d", &n);

	printf("elements: ");
	for(int i = 0; i<n; i++){
		scanf("%d", &a[i]);
		
	}
	printf("Given array:\n");
	printArray(a,n);


	mergeSort(a,0, n-1,n);
	printf("Sorted array:\n");
	for(int i = 0; i< n; i++){
		printf("%d ", a[i]);
	}
	printf("\n");

}



